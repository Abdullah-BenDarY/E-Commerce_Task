<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="logo_style">
       <item name="layout_constraintWidth_percent">0.20</item>
       <item name="layout_constraintHeight_percent">0.07</item>
       <item name="android:layout_marginStart">@dimen/_11sdp</item>
    </style>

    <style name="search_box_style">
        <item name="fontFamily">@font/myfont</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_8sdp</item>
        <item name="background">@drawable/search_box_shape</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="layout_constraintWidth_percent">0.80</item>
        <item name="layout_constraintHeight_percent">0.06</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:drawableStart">@drawable/icon_search</item>
        <item name="android:drawableTint">@color/stc_blue</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="hintTextColor">@color/hint_color_gray</item>

    </style>

    <style name="card_view_style">
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="strokeColor">#B3C4D2</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
    </style>

    <style name="product_name_style">
        <item name="android:textColor">@color/stc_blue</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/_7sdp</item>
        <item name="android:paddingEnd">@dimen/_7sdp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">26</item>
    </style>
    <style name="product_price_type_style">
        <item name="android:textColor">@color/stc_blue</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/_7sdp</item>
        <item name="android:paddingEnd">@dimen/_3sdp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">26</item>
    </style>

    <style name="product_price_style">
        <item name="android:textColor">@color/stc_blue</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">26</item>
    </style>

    <style name="old_price_style">
        <item name="android:textColor">@color/sky_blue</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/_14sdp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">26</item>
        <item name="android:foreground">@drawable/strikethrough</item>
    </style>

    <style name="tv_review_style">
        <item name="android:textColor">@color/stc_blue</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">26</item>
        <item name="android:paddingStart">@dimen/_7sdp</item>
    </style>

    <style name="tv_review_count_style">
        <item name="android:textColor">@color/stc_blue</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">26</item>
        <item name="android:paddingStart">@dimen/_3sdp</item>
    </style>

    <style name="btn_favoriets_style">
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="cornerRadius">@dimen/_23sdp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/_17sdp</item>
        <item name="iconTint">@color/stc_blue</item>
    </style>

    <style name="btn_add_style">
        <item name="android:layout_marginBottom">@dimen/_4sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="cornerRadius">@dimen/_23sdp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/_25sdp</item>
        <item name="iconTint">@color/stc_blue</item>
    </style>




    <style name="rv_style">
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="spanCount">2</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
    </style>



</resources>